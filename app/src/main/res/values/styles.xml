<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="WrapContent" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchParent" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="EditText" parent="AppTheme">
        <item name="android:layout_width">@dimen/edit_text_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="Heading" parent="AppTheme">
        <item name="android:paddingBottom">@dimen/heading_paddingBottom</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:drawablePadding">@dimen/drawablePadding</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/headingTextSize</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="SubMainHeader" parent="AppTheme">
        <item name="android:paddingBottom">@dimen/subMainHeaderPaddingBottom</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/subtextSize</item>
        <item name="android:fontFamily">Nunito</item>
        <item name="android:paddingLeft">@dimen/subMainPaddingSides</item>
        <item name="android:paddingRight">@dimen/subMainPaddingSides</item>
        <item name="android:textColor">@color/HeaderLightTextColor</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/generalPadding</item>
    </style>

    <style name="MainHeader" parent="AppTheme">
        <item name="android:paddingBottom">@dimen/generalPadding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/headingTextSize</item>
        <item name="android:textColor">@color/HeaderLightTextColor</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HeadingText" parent="AppTheme">
        <item name="android:paddingBottom">@dimen/generalPadding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:drawablePadding">@dimen/drawablePadding</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/smallHeadingTextSize</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="Information" parent="AppTheme">
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">@dimen/generalPadding</item>
        <item name="android:paddingRight">@dimen/generalPadding</item>
        <item name="android:paddingTop">@dimen/generalPadding</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/infoTextSize</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="Question" parent="AppTheme">
        <item name="android:paddingBottom">@dimen/generalPadding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="RadioGroup" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:color">@color/text</item>
    </style>

    <style name="RadioButton" parent="AppTheme">
        <item name="android:textSize">@dimen/radioButtonTextSize</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:color">@color/text</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:buttonTint">@color/radio_buttonTint</item>
    </style>

    <style name="questionBox" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/background</item>
        <item name="android:padding">@dimen/padding_question_box</item>
        <item name="android:layout_marginLeft">@dimen/questionBoxSideMargin</item>
        <item name="android:layout_marginRight">@dimen/questionBoxSideMargin</item>
        <item name="android:layout_marginTop">@dimen/generalPadding</item>
    </style>

    <style name="lastQuestionBox" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/backgroundimage</item>
        <item name="android:padding">@dimen/padding_question_box</item>
        <item name="android:layout_marginLeft">@dimen/questionBoxSideMargin</item>
        <item name="android:layout_marginRight">@dimen/questionBoxSideMargin</item>
        <item name="android:layout_marginTop">@dimen/generalPadding</item>
    </style>

    <style name="checkBox" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/generalPadding</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:buttonTint">@color/radio_buttonTint</item>
        <item name="android:paddingLeft">@dimen/padding_checkbox</item>
    </style>

    <style name="submitButton" parent="AppTheme">
        <item name="android:background">@drawable/submit_button</item>
        <item name="android:textColor">@color/submit_button_accent</item>

    </style>

</resources>
